@{
    ViewData["Title"] = "Tipode Ejercicio";
}

<link rel="stylesheet" href="~/css/Ejercicios.css" asp-append-version="true" />


<div class=" display-6 text-center">
    <h1 class="display-4 text-center fw-bold">Tipo de ejercicio</h1>

    <br>
    
    <div>
       <button type="button" onclick="nuevoRegistro()" data-bs-toggle="modal" data-bs-target="#modalTipodeEjercicios" class="btn btn-primary">Nuevo Ejercicio</button>
    </div>

    



 <!-- Button trigger modal -->

<div>
       <button type="button" class="btn btn-dark" onclick="ListadoTipoDeEjercicios()">Refrescar Tabla</button>     
    </div>
<br>


<div class="modal" id="modalTipodeEjercicios" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTituloEjercicio" ></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
         <form  id="formEjercicio">
            <div class="mb-3 d-flex flex-column ">
              <input type="hidden" id="id" style="display: none;">
                <label  class="form-label">Tipo de Ejercicio</label>
                <input type="text" class="form-control hola" id="nombre" placeholder="Tipo de Ejercicio">
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="limpiarModa()" class="btn btn-danger" data-bs-dismiss="modal"> Cerrar</button>
        <button type="button" onclick="guardarRegistro()" class="btn btn-success">Guardar cambios</button>
      </div>
    </div>
  </div>
</div>



<table class="table table-dark table-striped">
    <thead>
        <tr>
             <th>Descripci√≥n</th>      
              <th style="width: 70px">Editar</th>
             <th style="width: 70px">Eliminar</th> 
        </tr>
    </thead>
    <tbody id="tbody-tipoejercicios">
    </tbody>
</table>  
</div>



@section Scripts{
  <script src="~/js/tipodeEjercicio.js"></script>
}

