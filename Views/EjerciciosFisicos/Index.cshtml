@{
    ViewData["Title"] = "Ejercicio Ficicos";
}

<link rel="stylesheet" href="~/css/Ejercicios.css" asp-append-version="true" />

<div class="display-6 text-center">
  <h1>Ejercicios Fisicos</h1>

  <button type="button" data-bs-toggle="modal" data-bs-target="#ejercicioFicico" class="btn btn-primary">Nuevo Ejercicio Fisico</button>
  
  <br>

  <button type="button" class="btn btn-dark" onclick="ListadoEjercicioFicico()">Refrescar Tabla</button>  
</div>

<br>

<div class="modal" aria-labelledby="exampleModalLabel" aria-hidden="true" id="ejercicioFicico" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal">Registra tu Ejerccicio</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form>
        <div>
          <input type="hidden" id="EjercicioFisicoId" value="0">
        </div>
        <div class="mb-3">
            <label for="TipodeEjercicioId" class="form-label">Tipo de ejercicio</label>
            @Html.DropDownList("TipodeEjercicioId", null, htmlAttributes: new { @class = "form-control hola" })
        </div>
        <div class="mb-3 d-flex align-items-center justify-content-between">
          <div>
            <label for="FechaInicio" class="form-label ">Fecha inicial</label>
            <input type="datetime-local" id="FechaInicio" class="form-control hola" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")"/>
          </div>
          <div>
            <label for="Fechafin" class="form-label">Fecha fin</label>
            <input type="datetime-local" id="Fechafin" class="form-control hola" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")"/>
          </div>
        </div>
        <div class="mb-3 d-flex align-items-center justify-content-between">
          <div>
            <label for="EstadoEmocionalInicio" class="form-label">Estado emocional inicio</label>
           @Html.DropDownList("EstadoEmocionalInicio", null, htmlAttributes: new { @class = "form-control hola" })
         </div>
          <div>
            <label for="EstadoEmocionalFin" class="form-label">Estado emocional fin</label>
            @Html.DropDownList("EstadoEmocionalFin", null, htmlAttributes: new { @class = "form-control hola" })
          </div>
        </div>
        <div class="mb-3">
            <label for="Observaciones" class="form-label">Observaciones</label>
            <textarea id="Observaciones" rows="4" class = "form-control hola"></textarea>
        </div>
        </fieldset>
        </form>
      
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-success" onclick="GuardarEjercicioFisico()">Guardar</button>
        </div>
    </div>
  </div>
</div>



<table class="table table-dark table-striped">
    <thead>
        <tr>
             <th>Ejercicio realizando</th>      
             <th>Fecha inicio</th>      
             <th>Fecha fin</th>      
             <th>Estado inicial</th>      
             <th>Estado final</th>      
             <th>Observaciones</th>      
             <th style="width: 70px">Editar</th>
             <th style="width: 70px">Eliminar</th>
        </tr>
    </thead>
    <tbody id="tbody-listadoEjercicioFisico">
    </tbody>
</table>  
</div>

@section Scripts{
  <script src="~/js/ejercicioficicos.js"></script>
}